{
  "name": "Omni Tools",
  "description": "Just some features for Omni (top-academy)",
  "version": "1.5.1",
  "author": "savelijln0@gmail.com",
  "manifest_version": 3,
  "permissions": [
		"cookies",
		"webRequest"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
	"128": "OmniTools_128x128.png"
  },
  "content_scripts": [
    {
		"js": ["contentjs/databases.js", "contentjs/main.js", "contentjs/serverFuncs.js"],
        "matches": ["https://omni.top-academy.ru/*"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon" : "OmniTools_128x128.png"
  },
  "host_permissions": [
    "https://*.top-academy.ru/*"
  ]
}